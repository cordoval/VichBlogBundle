<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="vich_blog_tag_edit" pattern="/{slug}/edit">
        <default key="_controller">VichBlogBundle:Tag:edit</default>
    </route>
    
    <route id="vich_blog_tag_delete" pattern="/{slug}/delete">
        <default key="_controller">VichBlogBundle:Tag:delete</default>
    </route>
    
    <route id="vich_blog_tag_list" pattern="/list">
        <default key="_controller">VichBlogBundle:Tag:list</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="vich_blog_tag_new" pattern="/new">
        <default key="_controller">VichBlogBundle:Tag:new</default>
    </route>
    
    <route id="vich_blog_tag_show" pattern="/{slug}">
        <default key="_controller">VichBlogBundle:Tag:show</default>
        <requirement key="_method">GET</requirement>
    </route>

</routes>